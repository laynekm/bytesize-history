<resources>
    <!-- Light theme -->
    <!-- TODO: Fix switches not being styled when turned off -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDisablePreview">true</item>

        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryLight">@color/lightPrimaryLight</item>
        <item name="colorPrimaryDark">@color/lightPrimaryDark</item>
        <item name="colorAccent">@color/lightColorAccent</item>

        <item name="android:colorBackground">@color/lightBackground</item>
        <item name="colorBackground">@color/lightBackground</item>
        <item name="colorBackgroundDark">@color/lightBackgroundDark</item>

        <item name="android:textColor">@color/lightText</item>
        <item name="colorText">@color/lightText</item>
        <item name="colorTextLight">@color/lightTextLight</item>
        <item name="colorTextDark">@color/lightTextDark</item>

        <item name="colorButton">@color/lightPrimary</item>
        <item name="colorBorderBottom">@color/lightPrimary</item>
        <item name="colorBorderLeft">@color/lightBackgroundDark</item>

        <item name="android:datePickerDialogTheme">@style/dialogThemeLight</item>
        <item name="android:timePickerDialogTheme">@style/dialogThemeLight</item>
    </style>
    <style name="dialogThemeLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/lightPrimary</item>
    </style>

    <!-- Dark theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryLight">@color/darkPrimaryLight</item>
        <item name="colorPrimaryDark">@color/darkPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>

        <item name="android:colorBackground">@color/darkBackground</item>
        <item name="colorBackground">@color/darkBackground</item>
        <item name="colorBackgroundDark">@color/darkBackgroundDark</item>

        <item name="android:textColor">@color/darkText</item>
        <item name="colorText">@color/darkText</item>
        <item name="colorTextLight">@color/darkTextLight</item>
        <item name="colorTextDark">@color/darkTextDark</item>

        <item name="colorButton">@color/darkPrimaryLight</item>
        <item name="colorBorderBottom">@color/darkColorAccent</item>
        <item name="colorBorderLeft">@color/darkText</item>

        <item name="android:datePickerDialogTheme">@style/dialogThemeDark</item>
        <item name="android:timePickerDialogTheme">@style/dialogThemeDark</item>
    </style>
    <!-- TODO: Style dialog for dark theme -->
    <style name="dialogThemeDark" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/darkPrimaryLight</item>
    </style>

    <!-- Shared styles -->
    <style name="SwitchTheme" parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <item name="android:colorForeground">@color/lightText</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>