<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorBackground"
                                             android:paddingBottom="16dp">

    <Switch
            android:text="@string/order_descending"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/notification_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textOff="@string/order_descending"
            android:textOn="@string/order_ascending" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:text="@string/order_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textStyle="bold"/>
    <Switch
            android:text="@string/era_2000s"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:id="@+id/switch2000s" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/switch1900s" app:layout_constraintHorizontal_bias="1.0"/>
    <Switch
            android:text="@string/era_1900s"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:id="@+id/switch1900s" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/switch1800s" app:layout_constraintHorizontal_bias="0.0"/>
    <Switch
            android:text="@string/era_modern"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:id="@+id/switchEarlyModern" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/switchMedieval" app:layout_constraintHorizontal_bias="1.0"/>
    <Switch
            android:text="@string/era_1800s"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:id="@+id/switch1800s" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/switchEarlyModern" app:layout_constraintHorizontal_bias="0.0"/>
    <Switch
            android:text="@string/era_medieval"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/switchMedieval" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/switchAncient" app:layout_constraintHorizontal_bias="0.0"/>
    <Switch
            android:text="@string/type_deaths"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/switchDeaths" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/switchBirths" app:layout_constraintHorizontal_bias="1.0"/>
    <Switch
            android:text="@string/type_observances"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/switchObservances" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/switchDeaths" app:layout_constraintHorizontal_bias="1.0"/>
    <Switch
            android:text="@string/era_ancient"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/switchAncient" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintHorizontal_bias="1.0"/>
    <Switch
            android:text="@string/type_births"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/switchBirths" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/switchEvents" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="@string/type_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/notification_switch"
            android:layout_marginTop="16dp" android:textStyle="bold"/>
    <Switch
            android:text="@string/type_events"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/switchEvents" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="@string/era_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/switchObservances" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>