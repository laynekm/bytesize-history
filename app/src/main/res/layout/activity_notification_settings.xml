<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="laynekm.bytesize_history.NotificationSettingsActivity">

    <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay" android:background="@color/colorPrimary">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:navigationIcon="?attr/homeAsUpIndicator"
                app:title="@string/notification_settings_title"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Switch
                android:text="@string/notification_toggle"
                android:textColor="@color/colorText"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:id="@+id/notification_switch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:textOn="@string/order_ascending" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="@string/notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notification_time_label" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/notification_switch"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notification_time" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/notification_switch"
                app:layout_constraintStart_toEndOf="@+id/notification_time_label" android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"/>
        <Button
                android:layout_width="38dp"
                android:layout_height="37dp"
                android:id="@+id/notification_time_button" android:background="@drawable/clock"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/notification_switch" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
